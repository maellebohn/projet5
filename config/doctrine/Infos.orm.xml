<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Infos" repository-class="App\Repository\InfosRepository">
        <id name="id" column="id" type="uuid"/>
        <field name="content" type="text" />
        <field name="title" length="200" />
        <field name="category" length="50" />
        <field name="dateCreation" column="date_creation" type="datetime" />
        <field name="dateModification" column="date_modification" type="datetime" nullable="true" />
        <field name="image" length="50" nullable="true" />
        <many-to-one field="author" target-entity="Users">
            <join-column name="author_FK" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>
