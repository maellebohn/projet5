<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Users" repository-class="App\Repository\UsersRepository">
        <id name="id" column="id" type="uuid" />
        <field name="firstname" length="50" />
        <field name="lastname" length="50" />
        <field name="username" length="50" />
        <field name="email" length="50" />
        <field name="password" length="60" />
        <field name="roles" type="array" />
        <field name="dateCreation" column="date_creation" type="datetime" nullable="true" />
        <field name="active" column="active" type="boolean" />
        <field name="resetPasswordToken" length="10" nullable="true" />
    </entity>
</doctrine-mapping>
