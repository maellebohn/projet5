{% extends 'base.html.twig' %}

{% block wrapper %}

    <div class="row" id="reservation_row">
        <div id="reservation" class="col-xs-12 col-md-offset-3 col-md-6">
            <h1>RESERVER UN OISEAU</h1>
            <p>Vous trouverez ci-dessous les oiseaux disponibles et pouvez les pré-réservez !</p>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Date de naissance</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Reservation</th>
        </tr>
        </thead>

        <tbody>
        {% for birds in listbirds %}
        <tr>
            <td>{{ birds.name }}</td>
            <td>{{ birds.birthdate|date("d/m/Y") }}</td>
            <td>{{ birds.description }}</td>
            <td>{{ birds.price }} euros</td>
            <td><button class="btn btn-success">Réserver</button>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
