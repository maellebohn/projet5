{% block form %}
    {{ form_start(form) }}
        {{ form_row(form.title, { 'label': 'Titre' }) }}
        {{ form_row(form.image, { 'label': 'Image' }) }}
        {{ form_row(form.category, { 'label': 'Catégorie' }) }}
        {{ form_row(form.content, { 'label': 'Texte'|raw }) }}
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success" id="submit">Créer</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
